{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "types": ["node"],
    "module": "commonjs",
    "strict": true,
    "outDir": "lib/",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"]
}
